  "repository": "https://github.com/ngoode/glitter-api-new.git",
  "author": "Afrian Junior",
  "license": "none",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production PORT=7474 NODE_PATH=. pm2 start index.js --name='glitter-s3'",
    "dev": "NODE_ENV=development NODE_PATH=. nodemon --exec \"npm run lint && node index.js\"",
